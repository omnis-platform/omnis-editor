.om-s
  width 100%

  &__l
    font-size 1.1em
    font-weight 300
    font-family Roboto, "Helvetica Neue", Helvetica, Arial, sans-serif
    text-transform uppercase

  &__a
    width calc(100% - 30px)
    height 40vh
    padding 12px 15px
    border 1px solid #06c4bf
    overflow scroll

    &:focus
      outline none

    span[style~="color:"] a
      color inherit

    a
      color #0098f7
      text-decoration none 

      &:hover
        text-decoration underline

  &__c
    position relative
    width calc(100% - 30px)
    padding 12px 15px
    background #f7f8fb
    border 1px solid #06c4bf
    border-bottom 0
    display flex
    flex-wrap wrap

    &__item
      padding-right 12px

  &__d
    position absolute
    padding 15px 16px
    display flex
    flex-direction column
    background-color #fff
    border 1px solid #cccccc
    border-bottom 2px solid #000
    border-bottom-right-radius 4px
    border-bottom-left-radius 4px
    z-index: 2

    &__o
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      z-index 1